{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/get-audio/(.*)", "destination": "/api" }
  ],
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/get-audio/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}